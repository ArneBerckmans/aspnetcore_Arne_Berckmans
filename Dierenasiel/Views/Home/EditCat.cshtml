@{
    ViewData["Title"] = "Home Page";
}
@model EditCatViewModel

<div class="row">
    <div class="col-sm-12">
        <form method="post" asp-action="PersistCat">
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="IsMean">Gemeen?</label>
                <input type="checkbox" asp-for="IsMean"/>
            </div>
            <div class="form-group">
                <label asp-for="Name">Naam</label>
                <input type="text" asp-for="Name"/>
            </div>
            <div class="form-group">
                <label asp-for="Owner">Butler</label>
                <select asp-for="Owner" asp-items="Model.PotentialOwners"></select>
            </div>
            <input type="submit"/>
        </form>
    </div>
</div>